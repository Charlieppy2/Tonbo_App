<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- 頂部標題和按鈕區域 - 固定不動 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:paddingBottom="20dp"
        android:background="#000000">

        <!-- Tonbo標題 - 左側對齊 -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:contentDescription="@string/app_name"
            android:importantForAccessibility="yes"
            android:focusable="true"
            android:minHeight="48dp"
            android:layout_marginEnd="24dp" />

        <!-- 按鈕組 - 右側對齊 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 緊急求助設置按鈕 - 現代化設計 -->
            <Button
                android:id="@+id/emergencySettingsButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="🚨"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_emergency_background"
                android:backgroundTint="@null"
                android:contentDescription="@string/emergency_settings_desc"
                android:layout_marginEnd="8dp"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <!-- 系統設定按鈕 - 現代化設計 -->
            <Button
                android:id="@+id/systemSettingsButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="⚙"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_modern_background"
                android:backgroundTint="@null"
                android:contentDescription="@string/system_settings_desc"
                android:layout_marginEnd="8dp"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <!-- 語言切換按鈕 - 現代化設計 -->
            <Button
                android:id="@+id/languageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="廣"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_language_background"
                android:backgroundTint="@null"
                android:contentDescription="@string/language_button_desc_prefix"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

    <!-- 滑動區域 - 功能列表、緊急按鈕、操作指引 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

    <!-- 功能列表標題 - 增大字體和間距 -->
    <TextView
        android:id="@+id/functionSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/function_selection"
        android:textColor="#4FC3F7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/function_selection_area_desc"
        android:minHeight="32dp" />

    <!-- 功能列表 - 優化間距 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:nestedScrollingEnabled="false" />

    <!-- 緊急按鈕 - 增大尺寸和字體 -->
    <LinearLayout
        android:id="@+id/emergencyButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/emergency_button_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/emergency_button_desc"
        android:minHeight="90dp"
        android:padding="12dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emergency_help_text"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_press_send_text"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
            
    </LinearLayout>

    <!-- 操作指引區域 - 更詳細的指引 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:background="@drawable/guidance_background"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operation_guide_title"
            android:textColor="#4FC3F7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/operation_guide_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operation_guide_content"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:contentDescription="@string/operation_guide_content" />

    </LinearLayout>

            <!-- 底部間距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>