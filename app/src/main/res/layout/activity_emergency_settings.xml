<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- 標題欄 -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_circle_background"
            android:contentDescription="返回主頁按鈕" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="緊急求助設置"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="頁面標題：緊急求助設置" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <!-- 添加聯絡人區域 -->
    <LinearLayout
        android:id="@+id/addContactSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加緊急聯絡人"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="添加緊急聯絡人標題" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/newContactEditText"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:hint="輸入電話號碼"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:inputType="phone"
                android:contentDescription="輸入新的緊急聯絡人電話號碼" />

            <Button
                android:id="@+id/addContactButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="添加"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_square_background"
                android:layout_marginStart="12dp"
                android:paddingHorizontal="20dp"
                android:contentDescription="添加緊急聯絡人按鈕" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="例如：999、+852-999、+86-138-0000-0000"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:contentDescription="電話號碼格式示例" />

    </LinearLayout>

    <!-- 緊急聯絡人列表 -->
    <LinearLayout
        android:id="@+id/contactsSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/addContactSection"
        app:layout_constraintBottom_toTopOf="@id/messageSection">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="緊急聯絡人列表"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="緊急聯絡人列表標題" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="緊急聯絡人列表" />

    </LinearLayout>

    <!-- 訊息預覽區域 -->
    <LinearLayout
        android:id="@+id/messageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contactsSection"
        app:layout_constraintBottom_toTopOf="@id/testSection">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="緊急訊息預覽"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="緊急訊息預覽標題" />

        <TextView
            android:id="@+id/messagePreviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="緊急求助！我在使用瞳伴應用時遇到緊急情況，需要立即協助。請盡快聯繫我。"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:background="@drawable/result_background"
            android:padding="12dp"
            android:contentDescription="緊急求助訊息預覽" />

    </LinearLayout>

    <!-- 測試區域 -->
    <LinearLayout
        android:id="@+id/testSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/messageSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="測試緊急功能"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="測試緊急功能標題" />

        <Button
            android:id="@+id/testEmergencyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="🚨 測試緊急求助"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/emergency_button_background"
            android:contentDescription="測試緊急求助功能按鈕" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注意：測試模式不會發送實際的求助信息，只會測試語音和震動功能"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:contentDescription="測試模式說明" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
