<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 頂部標題區域 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 返回按鈕 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_button_desc"
            android:layout_marginEnd="16dp" />

        <!-- 頁面標題 -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/login_title"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:contentDescription="@string/login_title_desc"
            android:minHeight="48dp" />

    </LinearLayout>

    <!-- 狀態信息區域 -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_status_ready"
        android:textColor="#4FC3F7"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/settings_section_background"
        android:contentDescription="@string/login_status_desc"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 登入表單區域 -->
    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 電子郵件輸入 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/email_label_desc" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="@string/email_hint"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"
            android:contentDescription="@string/email_input_desc" />

        <!-- 密碼輸入 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/password_label_desc" />

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="@string/password_hint"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword"
            android:contentDescription="@string/password_input_desc" />

        <!-- 登入按鈕 -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/login_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/menu_blue"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/login_button_desc" />

        <!-- 註冊按鈕 -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/register_button"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/button_green"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/register_button_desc" />

        <!-- 訪客登入按鈕 -->
        <Button
            android:id="@+id/guest_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/guest_login_button"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/button_orange"
            android:textColor="@color/white"
            android:contentDescription="@string/guest_login_button_desc" />

    </LinearLayout>

    <!-- 底部說明文字 -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_instruction"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/settings_section_background"
        android:contentDescription="@string/login_instruction_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
