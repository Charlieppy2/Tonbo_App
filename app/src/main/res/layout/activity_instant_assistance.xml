<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="24dp">

    <!-- 頂部標題欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <!-- 返回按鈕 -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_button_desc"
            android:layout_marginEnd="16dp" />

        <!-- 標題 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/instant_assistance_title"
            android:textColor="@color/primary_blue"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:contentDescription="@string/instant_assistance_title" />

        <!-- 幫助按鈕 -->
        <Button
            android:id="@+id/helpButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="?"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/help_button_desc"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- 主要功能區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 一鍵呼叫按鈕 -->
        <Button
            android:id="@+id/quickCallButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="📞 一鍵呼叫志工"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_emergency_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="24dp"
            android:contentDescription="一鍵呼叫志工協助"
            android:elevation="8dp" />

        <!-- 快速訊息按鈕 -->
        <Button
            android:id="@+id/quickMessageButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="💬 快速訊息"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_modern_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="24dp"
            android:contentDescription="快速發送訊息給志工"
            android:elevation="8dp" />

        <!-- 視訊連線按鈕 -->
        <Button
            android:id="@+id/videoCallButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="📹 視訊連線"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_language_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="24dp"
            android:contentDescription="視訊連線志工協助"
            android:elevation="8dp" />

    </LinearLayout>

    <!-- 狀態顯示區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_section_background"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- 狀態文字 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ready_to_assist"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:contentDescription="當前狀態" />

        <!-- 連接狀態 -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checking_connection"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:contentDescription="連接狀態" />

    </LinearLayout>

</LinearLayout>
