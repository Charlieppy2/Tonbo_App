<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- 標題欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_background"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <!-- 回上一頁按鈕 -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="←"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_gradient_green"
            android:backgroundTint="@null"
            android:contentDescription="返回主頁"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp" />

        <!-- 標題 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="真實AI檢測演示"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp" />

        <!-- 佔位符保持對稱 -->
        <View
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <!-- 相機預覽區域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp">

        <!-- 相機預覽 -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <!-- 檢測結果覆蓋層 -->
        <com.example.tonbo_app.OptimizedDetectionOverlayView
            android:id="@+id/detectionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 檢測狀態指示器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="#80000000"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI檢測狀態"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="準備就緒"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- 控制按鈕區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#333333">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="開始檢測"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient_blue"
            android:backgroundTint="@null"
            android:layout_marginEnd="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止檢測"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient_orange"
            android:backgroundTint="@null"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <!-- 性能報告區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#222222">

        <Button
            android:id="@+id/performanceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看性能報告"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient_purple"
            android:backgroundTint="@null"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#111111"
            android:padding="8dp">

            <TextView
                android:id="@+id/performanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="點擊上方按鈕查看性能報告"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
