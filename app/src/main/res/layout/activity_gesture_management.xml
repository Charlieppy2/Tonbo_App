<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 頂部標題區域 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 返回按鈕 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="返回主頁按鈕"
            android:layout_marginEnd="16dp" />

        <!-- 頁面標題 -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手勢管理"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:contentDescription="手勢管理頁面標題"
            android:minHeight="48dp" />

    </LinearLayout>

    <!-- 手勢書寫區域 -->
    <FrameLayout
        android:id="@+id/gesture_draw_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gesture_draw_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6">

        <!-- 手勢繪畫視圖 -->
        <com.example.tonbo_app.GestureDrawView
            android:id="@+id/gesture_draw_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gesture_draw_background" />

    </FrameLayout>

    <!-- 底部控制面板 -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 保存按鈕 -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="綁定功能"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_modern_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="12dp" />
        
        <!-- 清除按鈕 -->
        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="清除"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_secondary_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="12dp" />

        <!-- 已保存手勢列表 -->
        <TextView
            android:id="@+id/saved_gestures_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已保存的手勢："
            android:textColor="#4FC3F7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:background="@drawable/list_background"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/saved_gestures_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 動態添加已保存的手勢項 -->
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
