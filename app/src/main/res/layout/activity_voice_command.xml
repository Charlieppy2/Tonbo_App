<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="24dp"
    android:gravity="center">

    <!-- 頂部返回按鈕和語言切換 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_button_desc"
            android:layout_marginEnd="12dp" />

    </LinearLayout>

    <!-- 標題 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voice_command_title"
        android:textColor="#4FC3F7"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/voice_command_title" />

    <!-- 狀態文字 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listening_status"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/listening_status" />

    <!-- 監聽按鈕 -->
    <Button
        android:id="@+id/listenButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="🎤"
        android:textSize="72sp"
        android:background="@drawable/voice_button_background"
        android:backgroundTint="@null"
        android:contentDescription="開始監聽按鈕"
        android:layout_marginBottom="32dp"
        android:elevation="8dp" />

    <!-- 識別結果 -->
    <TextView
        android:id="@+id/commandText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:minHeight="60dp"
        android:background="@drawable/settings_section_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="識別結果文字" />

    <!-- 提示文字 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/guidance_background"
            android:padding="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_commands"
                android:textColor="#4FC3F7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            
            <TextView
                android:id="@+id/hintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/commands_list"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:contentDescription="@string/commands_list" />
                
        </LinearLayout>

    </ScrollView>

</LinearLayout>
