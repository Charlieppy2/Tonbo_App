<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="相機預覽畫面" />

    <!-- Overlay for detection results -->
    <View
        android:id="@+id/detectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cameraPreview"
        app:layout_constraintBottom_toBottomOf="@id/cameraPreview"
        app:layout_constraintStart_toStartOf="@id/cameraPreview"
        app:layout_constraintEnd_toEndOf="@id/cameraPreview" />

    <!-- Top Control Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_circle_background"
            android:contentDescription="返回主頁按鈕" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="環境識別"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="環境識別頁面標題" />

        <Button
            android:id="@+id/flashButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="💡"
            android:textSize="20sp"
            android:background="@drawable/button_circle_background"
            android:contentDescription="閃光燈開關按鈕" />

    </LinearLayout>

    <!-- Information Container -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_dark"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/controlButtons">

        <TextView
            android:id="@+id/detectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在偵測環境..."
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:contentDescription="偵測狀態提示" />

        <TextView
            android:id="@+id/detectionResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="指向周圍物體以開始識別"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:minHeight="60dp"
            android:contentDescription="偵測結果顯示" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/captureButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="拍照識別"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/menu_button_background"
            android:layout_marginEnd="16dp"
            android:contentDescription="拍照並識別物體" />

        <Button
            android:id="@+id/speakButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="語音播報"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/menu_button_background"
            android:contentDescription="語音播報偵測結果" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

