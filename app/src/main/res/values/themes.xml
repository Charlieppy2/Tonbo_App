<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tonbo_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/menu_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Tonbo_App" parent="Base.Theme.Tonbo_App" />
    
    <!-- Splash Screen Theme - 全屏無狀態欄 -->
    <style name="Theme.Tonbo_App.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
    </style>
    
    <!-- Custom styles -->
    <style name="AppTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FunctionSelectionTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="FeatureCardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">20dp</item>
    </style>
    
    <style name="FeatureTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FeatureDescStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_card</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.8</item>
    </style>
    
    <style name="EmergencyButtonStyle">
        <item name="android:background">@drawable/emergency_button_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="MenuButtonStyle">
        <item name="android:background">@drawable/menu_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="HintTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>