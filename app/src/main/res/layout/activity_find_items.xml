<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".FindItemsActivity">

    <!-- 頂部標題欄 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 返回按鈕 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_button_desc"
            android:layout_marginEnd="12dp" />

        <!-- 頁面標題 -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/find_items_title"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:contentDescription="@string/find_items_title_desc" />

    </LinearLayout>

    <!-- 相機預覽區域 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/camera_preview_desc"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4" />

    <!-- 拍攝的圖片顯示區域 -->
    <ImageView
        android:id="@+id/captured_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@string/captured_image_desc"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4" />

    <!-- 狀態顯示 -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/find_items_ready"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:gravity="center"
        android:contentDescription="@string/status_text_desc"
        app:layout_constraintTop_toBottomOf="@id/camera_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 控制按鈕區域 -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:spacing="16dp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 拍攝按鈕 -->
        <Button
            android:id="@+id/capture_button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="@string/capture_photo"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/menu_blue"
            android:textColor="@color/white"
            android:contentDescription="@string/capture_button_desc" />

        <!-- 標記物品按鈕 -->
        <Button
            android:id="@+id/mark_item_button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="@string/mark_item"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/button_green"
            android:textColor="@color/white"
            android:enabled="false"
            android:contentDescription="@string/mark_item_button_desc" />

        <!-- 尋找物品按鈕 -->
        <Button
            android:id="@+id/find_item_button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="@string/find_items"
            android:textSize="16sp"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/button_orange"
            android:textColor="@color/white"
            android:contentDescription="@string/find_item_button_desc" />

    </LinearLayout>

    <!-- 物品名稱輸入區域 -->
    <LinearLayout
        android:id="@+id/item_name_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:spacing="12dp"
        app:layout_constraintTop_toBottomOf="@id/control_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_name_label"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/item_name_label_desc" />

        <EditText
            android:id="@+id/item_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/item_name_hint"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="text"
            android:contentDescription="@string/item_name_input_desc" />

    </LinearLayout>

    <!-- 已標記物品列表標題 -->
    <TextView
        android:id="@+id/items_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/marked_items_list"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:contentDescription="@string/marked_items_list_desc"
        app:layout_constraintTop_toBottomOf="@id/item_name_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 已標記物品列表 -->
    <ScrollView
        android:id="@+id/items_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_background"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/items_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/items_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
