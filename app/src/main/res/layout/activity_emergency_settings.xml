<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- 標題欄 -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_circle_background"
            android:backgroundTint="@null"
            android:contentDescription="返回主頁按鈕" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/emergency_settings_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/emergency_settings_title" />

    </LinearLayout>

    <!-- 添加聯絡人區域 -->
    <LinearLayout
        android:id="@+id/addContactSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_emergency_contact_title"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="添加緊急聯絡人標題" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/newContactEditText"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:hint="@string/enter_phone_number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:inputType="phone"
                android:contentDescription="輸入新的緊急聯絡人電話號碼" />

            <Button
                android:id="@+id/addContactButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/add_button"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_square_background"
                android:backgroundTint="@null"
                android:layout_marginStart="12dp"
                android:paddingHorizontal="20dp"
                android:contentDescription="添加緊急聯絡人按鈕" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_examples"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:contentDescription="電話號碼格式示例" />

    </LinearLayout>

    <!-- 緊急聯絡人列表 -->
    <LinearLayout
        android:id="@+id/contactsSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/addContactSection"
        app:layout_constraintBottom_toTopOf="@id/messageSection">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_contacts_list_title"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="緊急聯絡人列表標題" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="緊急聯絡人列表" />

    </LinearLayout>

    <!-- 訊息預覽區域 -->
    <LinearLayout
        android:id="@+id/messageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contactsSection"
        app:layout_constraintBottom_toTopOf="@id/testSection">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_message_preview"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="緊急訊息預覽標題" />

        <TextView
            android:id="@+id/messagePreviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_message_content"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:background="@drawable/result_background"
            android:padding="12dp"
            android:contentDescription="緊急求助訊息預覽" />

    </LinearLayout>

    <!-- 測試區域 -->
    <LinearLayout
        android:id="@+id/testSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_simple_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/messageSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_emergency_function"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:contentDescription="測試緊急功能標題" />

        <Button
            android:id="@+id/testEmergencyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/test_emergency_assistance"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/emergency_button_background"
            android:backgroundTint="@null"
            android:contentDescription="測試緊急求助功能按鈕" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_mode_warning"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:contentDescription="測試模式說明" />

        <!-- 設置完成按鈕 -->
        <Button
            android:id="@+id/setupCompleteButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/complete_setup"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:layout_marginTop="16dp"
            android:contentDescription="完成緊急求助設置按鈕" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
