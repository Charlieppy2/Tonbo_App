<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="相機預覽畫面"
        app:layout_constraintBottom_toTopOf="@id/infoContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Overlay for detection results -->
    <com.example.tonbo_app.DetectionOverlayView
        android:id="@+id/detectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="物體檢測結果覆蓋層，顯示檢測框和標籤"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/cameraPreview"
        app:layout_constraintEnd_toEndOf="@id/cameraPreview"
        app:layout_constraintStart_toStartOf="@id/cameraPreview"
        app:layout_constraintTop_toTopOf="@id/cameraPreview" />

    <!-- Top Control Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_simple_background"
            android:contentDescription="返回主頁按鈕"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="←"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:contentDescription="環境識別頁面標題"
            android:gravity="center"
            android:text="環境識別"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/flashButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_simple_background"
            android:contentDescription="閃光燈開關按鈕"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="💡"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Information Container -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/detectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="偵測狀態提示"
            android:gravity="center"
            android:text="正在偵測環境..."
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detectionResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="偵測結果顯示"
            android:gravity="center"
            android:minHeight="60dp"
            android:text="指向周圍物體以開始識別"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

