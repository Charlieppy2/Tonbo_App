<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="24dp"
    android:gravity="center">

    <!-- 頂部返回按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="返回按鈕" />

    </LinearLayout>

    <!-- 標題 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="語音命令"
        android:textColor="#4FC3F7"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:contentDescription="語音命令頁面標題" />

    <!-- 狀態文字 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="點擊開始"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:contentDescription="狀態文字" />

    <!-- 監聽按鈕 -->
    <Button
        android:id="@+id/listenButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="🎤"
        android:textSize="72sp"
        android:background="@drawable/voice_button_background"
        android:backgroundTint="@null"
        android:contentDescription="開始監聽按鈕"
        android:layout_marginBottom="32dp"
        android:elevation="8dp" />

    <!-- 識別結果 -->
    <TextView
        android:id="@+id/commandText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:minHeight="60dp"
        android:background="@drawable/settings_section_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="識別結果文字" />

    <!-- 提示文字 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可用指令：\n\n• 打開環境識別\n• 打開閱讀助手\n• 尋找物品\n• 即時協助\n• 緊急求助\n• 返回主頁\n• 切換語言\n• 打開設定\n• 現在幾點\n• 停止"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:background="@drawable/guidance_background"
            android:padding="16dp"
            android:contentDescription="可用指令列表" />

    </ScrollView>

</LinearLayout>

