<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- 頂部控制欄 -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/button_circle_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_to_home" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="閱讀助手"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:contentDescription="頁面標題：閱讀助手" />

        <Button
            android:id="@+id/flashButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="💡"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_circle_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/flash_button_desc"
            android:layout_marginEnd="8dp" />


    </LinearLayout>

    <!-- 模式選擇區域 -->
    <LinearLayout
        android:id="@+id/modeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topControls">

        <Button
            android:id="@+id/textModeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="📄 文字分析"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_modern_background"
            android:backgroundTint="@null"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:contentDescription="文字分析模式" />

        <Button
            android:id="@+id/currencyModeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="💰 錢幣分析"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_emergency_background"
            android:backgroundTint="@null"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:contentDescription="錢幣分析模式" />

    </LinearLayout>

    <!-- 相機預覽區域 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/modeSelector"
        app:layout_constraintBottom_toTopOf="@id/controlButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:contentDescription="相機預覽畫面，用於掃描文件和貨幣" />

    <!-- 掃描區域指示器 - 更大範圍 -->
    <View
        android:id="@+id/scanFrame"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:background="@drawable/scan_frame_background"
        app:layout_constraintTop_toTopOf="@id/cameraPreview"
        app:layout_constraintBottom_toBottomOf="@id/cameraPreview"
        app:layout_constraintStart_toStartOf="@id/cameraPreview"
        app:layout_constraintEnd_toEndOf="@id/cameraPreview"
        android:contentDescription="@string/scan_area_desc" />



    <!-- 底部控制按鈕 - 改為方形設計 -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/captureButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="📷 拍照掃描"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:contentDescription="拍照掃描按鈕" />

        <Button
            android:id="@+id/readButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="🔊 語音朗讀"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:contentDescription="語音朗讀按鈕" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="🗑️ 清除"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:gravity="center"
            android:contentDescription="清除按鈕" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
