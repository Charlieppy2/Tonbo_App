<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#3a3a3a"
                android:centerColor="#2a2a2a"
                android:endColor="#1a1a1a"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#4FC3F7" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2a2a2a"
                android:centerColor="#1a1a1a"
                android:endColor="#0a0a0a"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#404040" />
        </shape>
    </item>
</selector>
