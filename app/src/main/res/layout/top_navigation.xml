<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp"
    android:paddingBottom="16dp"
    android:background="#000000">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:minHeight="48dp" />

    <!-- 環境識別按鈕 -->
    <LinearLayout
        android:id="@+id/nav_environment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/environment_recognition_desc"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_environment"
            android:tint="@color/white"
            android:contentDescription="@string/environment_recognition_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/function_environment"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 文件助手按鈕 -->
    <LinearLayout
        android:id="@+id/nav_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/document_currency_desc"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_document"
            android:tint="@color/white"
            android:contentDescription="@string/document_currency_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/function_document"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 尋找物品按鈕 -->
    <LinearLayout
        android:id="@+id/nav_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/find_items_desc"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_find"
            android:tint="@color/white"
            android:contentDescription="@string/find_items_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/function_find_items"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 出行協助按鈕 -->
    <LinearLayout
        android:id="@+id/nav_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/travel_assistant_desc"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_travel"
            android:tint="@color/white"
            android:contentDescription="@string/travel_assistant_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/function_travel"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 緊急求助設置按鈕 - 方形設計 -->
    <Button
        android:id="@+id/emergencySettingsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="🚨"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_square_background"
        android:backgroundTint="@null"
        android:contentDescription="@string/emergency_settings_desc"
        android:layout_marginEnd="12dp"
        android:minHeight="64dp"
        android:minWidth="64dp" />

    <!-- 系統設定按鈕 - 方形設計 -->
    <Button
        android:id="@+id/systemSettingsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="⚙"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_square_background"
        android:backgroundTint="@null"
        android:contentDescription="@string/system_settings_desc"
        android:layout_marginEnd="12dp"
        android:minHeight="64dp"
        android:minWidth="64dp" />

    <!-- 語言切換按鈕 - 方形設計 -->
    <Button
        android:id="@+id/languageButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text="廣"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_square_background"
        android:backgroundTint="@null"
        android:contentDescription="@string/language_button_desc_prefix"
        android:minHeight="72dp"
        android:minWidth="72dp" />

</LinearLayout>
