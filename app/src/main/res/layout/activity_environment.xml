<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/camera_preview_desc"
        app:layout_constraintBottom_toTopOf="@id/infoContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Overlay for detection results -->
    <com.example.tonbo_app.DetectionOverlayView
        android:id="@+id/detectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/object_detection_overlay_desc"
        android:elevation="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/cameraPreview"
        app:layout_constraintEnd_toEndOf="@id/cameraPreview"
        app:layout_constraintStart_toStartOf="@id/cameraPreview"
        app:layout_constraintTop_toTopOf="@id/cameraPreview" />

    <!-- Top Control Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_modern_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_to_home"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="←"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:contentDescription="@string/environment_title"
            android:gravity="center"
            android:text="@string/environment_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/flashButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_modern_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/flash_button_desc"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="💡"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />


    </LinearLayout>

    <!-- Information Container -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/detectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/detection_status_desc"
            android:gravity="center"
            android:text="@string/analyzing_environment"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detectionResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detection_results_desc"
            android:gravity="center"
            android:minHeight="60dp"
            android:text="@string/point_to_objects_instruction"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Start Detection Button -->
        <Button
            android:id="@+id/startDetectionButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_gradient_blue"
            android:backgroundTint="@null"
            android:contentDescription="@string/start_detection_desc"
            android:text="@string/start_detection"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

