<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 頂部標題區域 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 返回按鈕 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@null"
            android:contentDescription="@string/back_button_desc"
            android:layout_marginEnd="16dp" />

        <!-- 頁面標題 -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/travel_assistant_title"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:contentDescription="@string/travel_assistant_title_desc"
            android:minHeight="48dp" />

    </LinearLayout>

    <!-- 狀態信息區域 -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travel_assistant_status"
        android:textColor="#4FC3F7"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/settings_section_background"
        android:contentDescription="@string/travel_assistant_status_desc"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 功能按鈕區域 -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 第一行按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 導航功能 -->
            <Button
                android:id="@+id/navigation_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/navigation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_square_background"
                android:backgroundTint="@color/menu_blue"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/navigation_desc" />

            <!-- 路線規劃 -->
            <Button
                android:id="@+id/route_planning_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/route_planning"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_square_background"
                android:backgroundTint="@color/button_green"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/route_planning_desc" />

        </LinearLayout>

        <!-- 第二行按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 交通信息 -->
            <Button
                android:id="@+id/traffic_info_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/traffic_info"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_square_background"
                android:backgroundTint="@color/button_orange"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/traffic_info_desc" />

            <!-- 天氣信息 -->
            <Button
                android:id="@+id/weather_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/weather_info"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_square_background"
                android:backgroundTint="@color/button_purple"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/weather_info_desc" />

        </LinearLayout>

        <!-- 第三行 - 緊急位置分享 -->
        <Button
            android:id="@+id/emergency_location_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/emergency_location"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_square_background"
            android:backgroundTint="@color/emergency_red"
            android:textColor="@color/white"
            android:contentDescription="@string/emergency_location_desc" />

    </LinearLayout>

    <!-- 底部說明文字 -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travel_assistant_instruction"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/settings_section_background"
        android:contentDescription="@string/travel_assistant_instruction_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
